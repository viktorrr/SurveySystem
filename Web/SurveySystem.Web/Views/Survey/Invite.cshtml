@model SurveySystem.Web.Models.Survey.EmailInvitation


@if (Model == null)
{
    <p>Невалиден номер на анкета.</p>
}
else
{
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Invite", "Survey", new { id = Model.SurveyId }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x => x.SurveyId)

                <div class="form-group">
                    @Html.LabelFor(x => x.EmailList, "Е-майл адрес(и)", new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.TextBoxFor(x => x.EmailList, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.EmailList)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-9">
                        <input type="submit" value="Изпрати" class="btn btn-default" />
                    </div>
                </div>
            }
        </div>
    </div>

}