@using SurveySystem.Data.Models
@model SurveySystem.Web.Models.Survey.BasicSubmissionDetails

@for (var i = 0; i < Model.QuestionTypes.Count; i++)
{
    <div class="row">
        <div class="col-md-12">
            @if (Model.QuestionTypes[i] == QuestionType.FreeText)
            {
                var question = Model.GetFreeTextQuestion(i);
                <p>@(i + 1). @question.Text</p>
                <p><i>@question.Answer</i></p>
            }
            else if (Model.QuestionTypes[i] == QuestionType.Checkbox)
            {
                var question = Model.GetCheckBoxQuestion(i);
                <p>@(i + 1). @question.Text</p>
                foreach (var answer in question.Answers)
                {
                    <p><i>@answer</i></p>
                }
            }
            else
            {
                var question = Model.GetRadioButtonQuestion(i);
                <p>@(i + 1). @question.Text</p>
            }
        </div>
    </div>
}