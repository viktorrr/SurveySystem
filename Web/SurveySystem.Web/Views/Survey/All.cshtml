@model IList<SurveySystem.Web.Models.Survey.BasicSurveyDetails>

    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped table-bordered dt-responsive nowrap" id="Data">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Заглавие</th>
                            <th>Анонимна анкета</th>
                            <th>Дата на създаване</th>
                        </tr>
                    </thead>
                    <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Html.ActionLink(Model[i].Tittle, "Details", new { id = Model[i].Id })</td>
                            <td>@(Model[i].IsAnonymous ? "Да" : "Не")</td>
                            <td>@Model[i].CreatedOn</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>